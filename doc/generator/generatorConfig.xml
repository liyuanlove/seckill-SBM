<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MysqlContext" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!--mapper父接口-->
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="org.tan.seckill.core.utils.MyMapper"/>
        </plugin>

        <!--链接配置-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/seckill?useUnicode=true&amp;characterEncoding=utf8&amp;useSSL=false"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <!-- PO配置 -->
        <javaModelGenerator targetPackage="org.tan.gen.po" targetProject="src/main/java"/>

        <!-- XML配置 -->
        <sqlMapGenerator targetPackage="gen" targetProject="src/main/resources"/>

        <!-- DAO配置 -->
        <javaClientGenerator targetPackage="org.tan.gen.mapper" targetProject="src/main/java"
                             type="XMLMAPPER"/>


        <table tableName="seckill"></table>
        <table tableName="success_killed"></table>

    </context>
</generatorConfiguration>